        <export>true</export>
        <html>
            <type>Text</type>
        </html>
        <comment>This text will be displayed after submit button</comment>
    </field>
    <field>
        <name>petition_message</name>
        <title>Petition message</title>
        <type>text</type>
        <required>false</required>
        <default>null</default>
        <import>true</import>
        <export>true</export>
        <html>
            <type>Text</type>
        </html>
        <comment>Petition message template</comment>
    </field>
    <field>
        <name>invert_consent_fields</name>
